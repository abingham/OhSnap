@model OhSnap.Models.Procedure

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker.min.css">
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Procedure</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Consultation.Location, "Location", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Consultation.Location,
                    new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control"
                        },
                    })
                @Html.ValidationMessageFor(model => model.Consultation.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Consultation.Timestamp, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Consultation.Timestamp,
                    new
                    {
                        htmlAttributes = new {
                            @class = "form-control",
                            data_provide = "datepicker",
                            data_date_format = "yyyy-mm-dd"
                        },
                    })
                @Html.ValidationMessageFor(model => model.Consultation.Timestamp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">            
            @Html.LabelFor(model => model.Repositioning, "Repositioning", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Repositioning,
                    new {
                        htmlAttributes = new { @class = "form-control" }
                    })
                @Html.ValidationMessageFor(model => model.Repositioning, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @Html.ActionLink(
                    "Cancel", "Details", "Patients",
                    new { id = ViewData["patientID"] }, new { })
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
