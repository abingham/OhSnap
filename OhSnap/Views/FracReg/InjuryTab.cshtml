<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Injury</label>
                <div class="col-sm-10">
                    <ui-select ng-model="selection.injury"
                               theme="bootstrap"
                               ng-disabled="selection.patient === null">
                        <ui-select-match placeholder="Select an injury...">
                            <div ng-if="selection.injury != null">
                                {{formatInjury(selection.injury)}}
                            </div>
                        </ui-select-match>
                        <ui-select-choices repeat="i in injuries | filter:{PatientID: selection.patient.ID }">
                            <div ng-bind-html="formatInjury(i)"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">Add new injury</div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="new-injury-date-input" class="control-label col-md-2">Date</label>
                    <div class="col-sm-10">
                        <input data-provide="datepicker" data-date-format="dd.mm.yyyy" class="form-control" id="new-injury-date-input">
                    </div>
                </div>

                <div class="form-group">
                    <label for="new-injury-hour-input" class="control-label col-sm-2">Hour</label>
                    <div class="col-sm-10">
                        <input type="number" min="0" max="23" class="form-control" id="new-injury-hour-input" placeholder="Hour of injury...">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
   
