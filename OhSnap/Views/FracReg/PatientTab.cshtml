@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Patient</label>
                <div class="col-sm-10">
                    <ui-select ng-model="selection.patient"
                               theme="bootstrap">
                        <ui-select-match placeholder="Select a patient...">
                            <div ng-if="selection.patient != null">
                                {{formatPatient(selection.patient)}}
                            </div>
                        </ui-select-match>
                        <ui-select-choices repeat="p in patients | filter:$select.search">
                            <div ng-bind-html="formatPatient(p)"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
            </div>
        </div>
    </div>
}   
